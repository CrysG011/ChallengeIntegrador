<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CREATE</title>
    <link rel="stylesheet" href="../../../../css/style.css">
</head>

<body>
    <%- include("../../partials/header-admin") %>
        <form class="container" action="/admin/create" method="post" enctype="multipart/form-data">
            <div class="create-grid">
                <div class="create-row">
                    <h1 class="create-title">CREAR NUEVO ITEM</h1>
                </div>
                <%- include("../../partials/errors") %>
                <div class="create-row">
                    <label for="categoria">Categoría:</label>
                    <select id="categoria" name="categoria">
                        <option value="opcion1">Seleccionar</option>
                        <option value="opcion2">Opción 1</option>
                        <option value="opcion3">Opción 2</option>
                    </select>
                    <label for="licencia">Licencia:</label>
                    <select id="licencia" name="licencia">
                        <option value="opcion1">Seleccionar</option>
                        <option value="opcion2">Opción 1</option>
                        <option value="opcion3">Opción 2</option>
                    </select>
                </div>
                <div class="create-row">
                    <label for="nombre">Nombre del producto:</label>
                    <input class="log-input" type="text" id="nombre" name="product_name" value="<%= typeof values != 'undefined' ? values.product_name : '' %>"/>
                </div>
                <div class="create-row">
                    <input class="desc-input" type="text" id="descripcion" name="product_description"
                        placeholder="Descripción del producto" value="<%= typeof values != 'undefined' ? values.product_description : '' %>" >
                </div>
                <div class="create-row">
                    <label for="sku">SKU:</label>
                    <input class="create-input log-input" type="text" id="sku" name="sku" placeholder="SSK111AB001" value="<%= typeof values != 'undefined' ? values.sku : '' %>">
                    <label for="precio">Precio:</label>
                    <input class="create-input log-input" type="text" id="precio" name="price"
                        placeholder="$ 0.000,00" value="<%= typeof values != 'undefined' ? values.price : '' %>">
                    <label for="stock">Stock:</label>
                    <input class="create-input log-input" type="text" id="stock" name="stock" placeholder=" 0 " value="<%= typeof values != 'undefined' ? values.stock : '' %>">
                </div>
                <div class="create-row">
                    <label for="descuento">Descuento:</label>
                    <input class="create-input log-input" type="text" id="descuento" name="descuento" placeholder="0%">
                    <label for="cuotas">Cuotas:</label>
                    <select id="cuotas" name="cuotas">
                        <option value="opcion1">3 Cuotas sin interés</option>
                        <option value="opcion2">6 Cuotas</option>
                        <option value="opcion3">12 Cuotas</option>
                    </select>
                </div>
                <div class="create-row">
                    <label for="imagenes">Imagen de frente:</label>
                    <input type="file" id="imagenes" name="imagenes" accept="image/*">
                    <label for="imagenes">Imagen de dorso:</label>
                    <input type="file" id="imagenes" name="imagenes" accept="image/*">
                </div>
                <div class="create-row">
                    <button class="btn-ingresar" type="submit" id="agregar">Agregar Producto</button>
                    <button class="btn-ingresar" type="reset" id="limpiar">Limpiar</button>
                </div>
            </div>
        </form>
        <%- include("../../partials/footer-admin") %>
</body>

</html>